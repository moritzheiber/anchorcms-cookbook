description "Anchorcms PHP webserver"

start on runlevel [2345]
stop on runlevel [016]

setuid <%= node['anchorcms']['deploy_user'] %>
setgid <%= node['anchorcms']['deploy_group'] %>

exec /usr/bin/php -S 0.0.0.0:<%= node['anchorcms']['inner_port'] %> -t <%= node['anchorcms']['app_root'] %>/current
